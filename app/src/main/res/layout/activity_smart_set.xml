<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baseBackgroud"
    tools:context=".device.SmartSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="16dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒柜名称:"
            android:textColor="@color/d3d3d3d"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入酒柜名称"
            android:textColor="@color/d3d3d3d"
            android:textSize="16sp"
            android:textColorHint="@color/d9d9d9"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/line_1dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp">


        <TextView
            android:id="@+id/work_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="工作模式:"
            android:textColor="@color/d3d3d3d"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/img_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rihgt" />

        <EditText
            android:id="@+id/work_mode_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_right1"
            android:layout_toRightOf="@id/work_mode"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:focusable="false"
            android:hint="红葡萄酒"
            android:textColor="@color/d3d3d3d"
            android:textSize="16sp"
            android:textColorHint="@color/d9d9d9"
            android:paddingLeft="10dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/line_1dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp">


        <TextView
            android:id="@+id/work_mode_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="设置温度:"
            android:textColor="@color/d3d3d3d"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/img_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rihgt" />

        <EditText
            android:id="@+id/work_mode_temp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_right2"
            android:layout_toRightOf="@id/work_mode_temp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:focusable="false"
            android:hint="15℃"
            android:textColor="@color/d3d3d3d"
            android:textSize="16sp"
            android:textColorHint="@color/d9d9d9"
            android:paddingLeft="10dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_btn_bg"
        android:text="保存"
        android:textSize="18sp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />
</LinearLayout>
