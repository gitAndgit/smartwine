<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/user_avatar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/write"
        android:clickable="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/C7C7C7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="头像"
            android:textColor="@color/n42383e" />

        <TextView
            android:id="@+id/test5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_arrow"
            android:onClick="onClick" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/test5"
            android:layout_toStartOf="@id/test5"
            android:clickable="true"
            android:onClick="onClick"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/dcdcdc"
            fresco:roundingBorderWidth="2dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="昵称"
            android:textColor="@color/n42383e" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_arrow"
            android:onClick="onClick"
            android:textColor="@color/a19a9e" />
        <TextView
            android:layout_below="@id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/C7C7C7"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_sex_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="性别"
            android:textColor="@color/n42383e" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_arrow"
            android:onClick="onClick"
            android:textColor="@color/a19a9e" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/C7C7C7"
            android:layout_below="@id/sex" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_birsty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="生日"
            android:textColor="@color/n42383e" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_arrow"
            android:onClick="onClick"
            android:textColor="@color/a19a9e" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/birthday" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_bing_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="手机号码"
            android:textColor="@color/n42383e" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/user_change_phone"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_user_change_phone_number"
                android:clickable="true"
                android:gravity="center"
                android:text="更换"
                android:textColor="@color/f85570"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/user_change_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_arrow"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_toLeftOf="@id/rl"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="@color/a19a9e" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/user_phone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write" >

        <TextView
            android:id="@+id/sign_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="个性签名"
            android:textColor="@color/n42383e" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/sign_textview"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_arrow"
            android:gravity="right|center_vertical"
            android:onClick="onClick"
            android:textColor="@color/a19a9e" />
    </RelativeLayout>
</LinearLayout>
