<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/write"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/lr_remove_cache"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>
            <TextView
                android:text="清除缓存"
                android:textColor="@color/d3d3d3d"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_cache"
                android:layout_alignParentRight="true"
                android:textColor="@color/d9d9d9"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="0.00M"
                android:background="@null"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/C7C7C7"
            android:layout_marginLeft="10dp"
            android:layout_height="1px" />
        <RelativeLayout
            android:id="@+id/lr_suggest"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="意见反馈"
                android:textColor="@color/d3d3d3d"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/C7C7C7"
            android:layout_marginLeft="10dp"
            android:layout_height="1px" />
        <RelativeLayout
            android:id="@+id/lr_about_smart"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="关于智能酒柜"
                android:textColor="@color/d3d3d3d"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:background="@color/f5f5f5">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/baseColor"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/wifi_connect_edit_next_step"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
